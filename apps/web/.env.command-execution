# Command Execution System Configuration
# Copy these variables to your .env.local file and configure them

# Git Configuration
GIT_COMMIT_AUTHOR_NAME="SwiftAPI Bot"
GIT_COMMIT_AUTHOR_EMAIL="bot@swiftapi.dev"

# GitHub Configuration
GITHUB_TOKEN="ghp_your_github_personal_access_token"
GITHUB_BRANCH="main"
GITHUB_DEFAULT_BRANCH="main"
GITHUB_REPO_OWNER="your-username"
GITHUB_REPO_NAME="your-repo"

# PR Mode (true = create PRs, false = direct push)
PR_MODE="true"

# Repository Path (default: current working directory)
REPO_PATH="/path/to/your/repo"

# Vercel Deployment (optional)
VERCEL_TOKEN="your_vercel_token"
VERCEL_PROJECT_ID="your_project_id"
